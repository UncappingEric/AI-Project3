<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.Controller">
   <children>
    <Button layoutX="22.0" layoutY="21.0" mnemonicParsing="false" onAction="#launchSmallGrid" text="3 X 3 Grid" />
      <Separator layoutX="21.0" layoutY="62.0" prefHeight="2.0" prefWidth="255.0" />
      <Separator layoutX="147.0" layoutY="71.0" orientation="VERTICAL" prefHeight="166.0" prefWidth="6.0" />
      <Label layoutX="49.0" layoutY="73.0" text="DIRECTION" />
      <Label layoutX="193.0" layoutY="73.0" text="CELL TYPE" />
      <RadioButton fx:id="up" layoutX="40.0" layoutY="105.0" mnemonicParsing="false" selected="true" text="UP">
         <toggleGroup>
            <ToggleGroup fx:id="direction" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="right" layoutX="40.0" layoutY="222.0" mnemonicParsing="false" text="RIGHT" toggleGroup="$direction" />
      <RadioButton fx:id="down" layoutX="40.0" layoutY="145.0" mnemonicParsing="false" text="DOWN" toggleGroup="$direction" />
      <RadioButton fx:id="left" layoutX="40.0" layoutY="184.0" mnemonicParsing="false" text="LEFT" toggleGroup="$direction" />
      <RadioButton fx:id="hard" layoutX="184.0" layoutY="184.0" mnemonicParsing="false" text="HARD">
         <toggleGroup>
            <ToggleGroup fx:id="type" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="highway" layoutX="184.0" layoutY="145.0" mnemonicParsing="false" text="HIGHWAY" toggleGroup="$type" />
      <RadioButton fx:id="normal" layoutX="184.0" layoutY="105.0" mnemonicParsing="false" selected="true" text="NORMAL" toggleGroup="$type" />
    <Button defaultButton="true" layoutX="202.0" layoutY="260.0" minWidth="75.0" mnemonicParsing="false" onAction="#addNext" text="ADD NEXT" />
      <Button fx:id="undo" disable="true" layoutX="117.0" layoutY="260.0" minWidth="75.0" mnemonicParsing="false" onAction="#undo" text="UNDO" />
      <Button fx:id="reset" disable="true" layoutX="30.0" layoutY="260.0" minWidth="75.0" mnemonicParsing="false" onAction="#reset" text="RESET" />
   </children>
</AnchorPane>
